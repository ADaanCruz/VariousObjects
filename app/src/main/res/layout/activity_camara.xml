<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnCaptura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@android:color/background_dark" />

    <Button
        android:id="@+id/btnCaptura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen"
        android:layout_alignLeft="@+id/imagen"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginBottom="74dp"
        android:text="Tomar Foto" />

        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignTop="@+id/btnCaptura"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp">

    <Button
        android:id="@+id/btnanti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen"
        android:layout_alignLeft="@+id/imagen"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="74dp"
        android:layout_weight="1"
        android:text="Anterior" />

    <Button
        android:id="@+id/btnsigi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen"
        android:layout_alignLeft="@+id/imagen"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="279dp"
        android:layout_marginLeft="279dp"
        android:layout_marginBottom="74dp"
        android:layout_weight="1"
        android:text="Siguiente" />
</RelativeLayout>
